#ifndef FOOD_H_
#define FOOD_H_

#include "Item.h"

#include <boost/algorithm/string.hpp>

class Food: public Item
{
private:
	bool needsCooling;

public:
	Food(std::string name, std::string shop, std::time_t until, bool needsCooling);
	virtual ~Food();
	bool getNeedsCooling() const;
	std::set<std::string>getNotes() const;
	virtual std::string toString() const override;
	virtual void save(std::ostream& to) const;
	static Food* restore(std::string line);

};

#endif /* FOOD_H_ */
